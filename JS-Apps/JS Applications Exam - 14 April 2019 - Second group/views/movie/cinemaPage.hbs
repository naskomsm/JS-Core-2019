{{> header}}
<div id="cinema">
    <h1>All Movies</h1>
    <form action="#todo" method="GET">
        <label>Search genre:</label>
        <input type="text" name="search">
        <input type="submit" value="Search">
    </form>
    <div class="movies">
        {{#each movies}}
        <div class="movie">
            <h2>{{title}}</h2>
            <img
                src="{{imageUrl}}">
            <p>Available Tickets: {{tickets}}</p>
            <button><a href="#/buyTicket/{{_id}}">Buy Ticket</a></button>
            <button><a href="#/myMovies/details/{{_id}}">Details</a></button>
        </div>
        {{/each}}
    </div>
</div>
{{> footer}}